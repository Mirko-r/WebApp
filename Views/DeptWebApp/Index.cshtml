@model IEnumerable<Department>
<body>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <th>Name</th><th>ID</th><th>Action</th>
            @foreach (Department d in Model)
            {
                <partial name="_RowPartial" model="d" />
            }
        </table>
    }
    else
    {
        <div>No departments found</div>
    }

</body>